import java.util.Scanner;

public class hipotenusBul {
    public static void main(String[] args) {
        hipotenusBul();
    }
    public static void hipotenusBul(){
        Scanner scanner = new Scanner(System.in);
        int a,b;
        double c;
        System.out.print("A kenarinin degerini giriniz = ");
        a = scanner.nextInt();
        System.out.print("B kenarinin degerini giriniz = ");
        b = scanner.nextInt();

        c = Math.sqrt((a*a)+(b*b));
        System.out.println("Hipotenus = " + c);

    }
}
