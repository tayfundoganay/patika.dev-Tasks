import java.util.Scanner;

public class vucutKitleEndeksiHesaplayici {
    public static void main(String[] args) {
        vucutKitleEndeksiHesaplayici();
    }
    public static void vucutKitleEndeksiHesaplayici(){
        Scanner scanner = new Scanner(System.in);
        System.out.println("Boy ve Kilonuzu giriniz.");
        double boy = scanner.nextDouble();
        double kilo = scanner.nextDouble();
        double vucutKitleEndeksi = (kilo / (boy * boy));
        System.out.println("vucutKitleEndeksiniz = " + vucutKitleEndeksi);
    }
}
